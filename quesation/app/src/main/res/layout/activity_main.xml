<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:padding="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سوال 1 از 5"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="متن سوال اینجا نمایش داده می‌شود"
            android:textColor="@color/text_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:lineSpacingExtra="6dp"
            android:paddingBottom="14dp" />

        <Button
            android:id="@+id/btnA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_option"
            android:padding="14dp"
            android:text="گزینه A"
            android:textColor="@color/orange_700"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_option"
            android:padding="14dp"
            android:text="گزینه B"
            android:textColor="@color/orange_700"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_option"
            android:padding="14dp"
            android:text="گزینه C"
            android:textColor="@color/orange_700"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_option"
            android:padding="14dp"
            android:text="گزینه D"
            android:textColor="@color/orange_700"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginBottom="14dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_next_disabled"
            android:text="سوال بعدی"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            android:padding="14dp"
            android:enabled="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
