<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:layout_marginBottom="12dp"
    android:background="#121A2B"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:background="#0B0F1A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@id/imgCover"
        app:layout_constraintTop_toTopOf="@id/imgCover"
        app:layout_constraintRight_toLeftOf="@id/btnPlay"/>

    <TextView
        android:id="@+id/txtArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textColor="#B6C2E2"
        android:textSize="13sp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@id/imgCover"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintRight_toLeftOf="@id/btnPlay"/>

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_play"
        android:tint="#FF6A00"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
